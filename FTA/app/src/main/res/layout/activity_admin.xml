<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_choose_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Chọn ảnh"
            android:backgroundTint="@color/mauchinh"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Danh sách sản phẩm"
            android:textSize="20sp"
            android:backgroundTint="@color/mauchinh"
            android:textColor="@color/black"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_admin"
                android:layout_marginTop="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/edtid_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập ID"
                android:inputType="number"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edttitle_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edtdes_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mô tả"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edtprice_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập giá"
                android:inputType="number"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edtstar_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập đánh giá"
                android:inputType="number"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edttime_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập thời gian chờ"
                android:inputType="number"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edtcalo_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập Calo"
                android:inputType="number"
                android:layout_margin="15dp"
                android:textSize="20dp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_add_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm sản phẩm"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:backgroundTint="@color/mauchinh"
        android:textColor="@color/black"/>

</LinearLayout>