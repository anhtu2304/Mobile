<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/vienngoai"
    android:layout_margin="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập thông tin"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edtphoneuser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/vienedt"
        android:hint="Nhập số điện thoại"
        android:textSize="20dp"
        android:paddingStart="15dp"
        android:layout_margin="15dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edtaddressuser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/vienedt"
        android:hint="Nhập địa chỉ"
        android:textSize="20dp"
        android:paddingStart="15dp"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnhuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="30dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/mauchinh"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btndongy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác Nhận"
            android:textSize="30dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/mauchinh"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>